\procedure pick-a-date(text fieldname popuptiddler)
  <$button class="py-btn" popup=<<popuptiddler>>>
    <$list filter="[all[current]!has<fieldname>]"
     emptyMessage="""<$view field=<<fieldname>> format="date" template={{$:/language/projectify/DateFormat}}/>""">
     <<text>>
    </$list>
  </$button>
  <$reveal state=<<popuptiddler>> type="popup" position="belowleft" animate="no">
    <div class="tc-drop-down py-drop-down py-date-picker">
      <$py-date-calendar field=<<fieldname>> />
      <hr/>
      <$py-date-clear field=<<fieldname>> >{{$:/plugins/nico/projectify/images/slash-circle}} <<lingo Clear>></$py-date-clear>
    </div>
  </$reveal>
\end


